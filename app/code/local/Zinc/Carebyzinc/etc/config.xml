<config>
    <modules>
        <Zinc_Carebyzinc>
            <version>1.0.3</version>
        </Zinc_Carebyzinc>
    </modules>
    <frontend>
        <routers>
            <carebyzinc>
                <use>standard</use>
                <args>
                    <module>Zinc_Carebyzinc</module>
                    <frontName>carebyzinc</frontName>
                </args>
            </carebyzinc>
        </routers>
        <layout>
            <updates>
                <carebyzinc>
                    <file>zinc_carebyzinc.xml</file>
                </carebyzinc>
            </updates>
        </layout>
    </frontend>

     <admin>
	<routers>
		<adminhtml>
			<args>
				<modules>
					<carebyzinc after="Mage_Adminhtml">Zinc_Carebyzinc_Adminhtml</carebyzinc>
				</modules>
				</args>				
		</adminhtml>
	</routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<carebyzinc>
					<file>zinc_carebyzinc.xml</file>
				</carebyzinc>
			</updates>
		</layout>				
    </adminhtml>   
    <global>
  	  <rewrite>
         <zinc_carebyzinc>
               <from><![CDATA[#^/checkout/cart/#]]></from>
               <to>/carebyzinc/cart/</to>
         </zinc_carebyzinc>
   	 </rewrite>

	  <sales>
		  <quote>
			  <item>
				  <product_attributes>
					  <carebyzinc_option />
				  </product_attributes>
			  </item>
		  </quote>
	  </sales>
	  <events>
		<controller_action_predispatch_checkout_cart_index>
			<observers>
				<modify_carebyzinc>
					<type>singleton</type>
	               			 <class>Zinc_Carebyzinc_Model_Observer</class>
					<method>cartLoad</method>
				</modify_carebyzinc>
			</observers>
		</controller_action_predispatch_checkout_cart_index>
		<controller_action_predispatch_checkout_cart_onepage>
			<observers>
				<modify_carebyzinc>
					<type>singleton</type>
	               			 <class>Zinc_Carebyzinc_Model_Observer</class>
					<method>cartLoad</method>
				</modify_carebyzinc>
			</observers>
		</controller_action_predispatch_checkout_cart_onepage>
		<sales_order_save_after>
			<observers>
				<save_carebyzinc>
					<type>singleton</type>
	                <class>Zinc_Carebyzinc_Model_Observer</class>
					<method>saveCarebyzinc</method>
				</save_carebyzinc>
			</observers>
		</sales_order_save_after>
	  </events>
	  <fieldsets>
			<sales_convert_quote_item>
				<carebyzinc_option>
					<to_order_item>*</to_order_item>
				</carebyzinc_option>
			</sales_convert_quote_item>
			<sales_convert_order_item>
				<carebyzinc_option>
					<to_quote_item>*</to_quote_item>
				</carebyzinc_option>
			</sales_convert_order_item>
		</fieldsets>
       		<models>
	            <carebyzinc>
	                <class>Zinc_Carebyzinc_Model</class>
	                <resourceModel>carebyzinc_mysql4</resourceModel>
	            </carebyzinc>
	            <carebyzinc_mysql4>
	                <class>Zinc_Carebyzinc_Model_Mysql4</class>
	                <entities>
	                   <order>
	                        <table>zinc_carebyzinc_order</table>
	                    </order>
	                </entities>
	            </carebyzinc_mysql4>
	            <checkout>
	           	 <rewrite>
	               		 <cart>Zinc_Carebyzinc_Model_Checkout_Cart</cart> 
	           	 </rewrite>
	            </checkout>
	            <sales>
		     	 <rewrite>
		       		 <quote>Zinc_Carebyzinc_Model_Sales_Quote</quote>
		     	 </rewrite>
	    	    </sales>
        </models>
        <resources>
            <carebyzinc_setup>
                <setup>
                    <module>Zinc_Carebyzinc</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </carebyzinc_setup>
            <carebyzinc_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </carebyzinc_write>
            <carebyzinc_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </carebyzinc_read>
        </resources>
        <blocks>
            <carebyzinc>
                <class>Zinc_Carebyzinc_Block</class>
            </carebyzinc>
	    <adminhtml>
                <rewrite>
                    <catalog_product_grid>Zinc_Carebyzinc_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <carebyzinc>
                <class>Zinc_Carebyzinc_Helper</class>
            </carebyzinc>
        </helpers>
    </global>
</config>
